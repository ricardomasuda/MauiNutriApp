<?xml version="1.0"
      encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:componente="clr-namespace:NutriApp.AppNutri.Componente"
             xmlns:core="http://schemas.syncfusion.com/maui"
             xmlns:adequacyWeight="clr-namespace:NutriApp.AppNutri.View.Evaluation.AdequacyWeight"
             xmlns:titleView1="clr-namespace:NutriApp.Components.Titles.TitleView"
             x:DataType="adequacyWeight:AdequacyWeightViewModel"
             BackgroundColor="{StaticResource PageColor}"
             NavigationPage.HasNavigationBar="False"
             x:Class="NutriApp.AppNutri.View.Evaluation.AdequacyWeight.AdequacyWeightPage">
    
    <StackLayout VerticalOptions="FillAndExpand">

        <titleView1:NewTitleView TypeTitle="InfoCircle"
                                 Command="{Binding InfoCommand}"
                                 TextTitle="Adequação ao Peso" />

        <StackLayout Margin="20,20,20,0">

            <core:SfTextInputLayout HeightRequest="80"
                                    ContainerType="Outlined"
                                    Hint="Peso Atual (kg)"
                                    IsHintAlwaysFloated="True"
                                    OutlineCornerRadius="8">

                <Entry BackgroundColor="#F4F4F4"
                       TextColor="Black"
                       Keyboard="Numeric"
                       Text="{Binding PesoAtual}"
                       PlaceholderColor="Black">
                    <!-- <Entry.Behaviors> -->
                    <!--     <components:WeightValidationBehavior /> -->
                    <!-- </Entry.Behaviors> -->
                </Entry>

            </core:SfTextInputLayout>

            <core:SfTextInputLayout HeightRequest="80"
                                    ContainerType="Outlined"
                                    Hint="Peso Ideal (kg)"
                                    IsHintAlwaysFloated="True"
                                    OutlineCornerRadius="8">
                <Entry BackgroundColor="#F4F4F4"
                       TextColor="Black"
                       Keyboard="Numeric"
                       Text="{Binding PesoIdeal}"
                       PlaceholderColor="Black">
                    <!-- <Entry.Behaviors> -->
                    <!--     <components:WeightValidationBehavior /> -->
                    <!-- </Entry.Behaviors> -->
                </Entry>
            </core:SfTextInputLayout>

            <StackLayout Margin="0,30,0,0">
                <StackLayout HorizontalOptions="EndAndExpand"
                             IsVisible="{Binding CanDisplayResult}">

                    <componente:ResultLineView Margin="0,40,0,0"
                                               ResultType="FIRST"
                                               TextTitle="Adequação ao Peso:"
                                               BodyText="{Binding Result}" />

                    <componente:ResultLineView TextTitle="Classificação:"
                                               BodyText="{Binding ClassificacaoPesoAdequado}" />

                </StackLayout>

                <componente:ButtonView Margin="0,-3,0,0"
                                       Command="{Binding CalculateCommand}"
                                       VerticalOptions="CenterAndExpand"
                                       TextColor="White"
                                       BackgroundColor="{StaticResource DarkBlue}"
                                       Text="Calcular" />

            </StackLayout>

        </StackLayout>

    </StackLayout>
</ContentPage>