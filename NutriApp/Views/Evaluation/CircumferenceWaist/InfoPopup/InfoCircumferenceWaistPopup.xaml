            Margin="20,20">
            <VerticalStackLayout
                 BackgroundColor="{StaticResource PageColor}">

                <view:NewTitleView
                    VisibleBack="False"
                    TypeTitle="Close"
                    Command="{Binding CloseCommand}"
                    CommandParameter="{Binding Source={x:Reference Popup}}"
                    TextTitle="CircunferÃªncia da Cintura" />

                <StackLayout
