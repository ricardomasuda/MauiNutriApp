                                    CornerRadius="0"
                                    HorizontalOptions="Fill"
                                    Padding="5">

                                    <Label
                                        Text="Alto"
                                        FontSize="13"
                                        HorizontalTextAlignment="Center"
                                        HorizontalOptions="Center"
                                        FontAttributes="Bold"
                                        TextColor="White" />

                                </Frame>

                                <Frame Grid.Column="4"
                                       BorderColor="{StaticResource DarkGreyText}"
                                       CornerRadius="0"
                                       BackgroundColor="{StaticResource DarkBlue}"
                                       HorizontalOptions="Fill"
