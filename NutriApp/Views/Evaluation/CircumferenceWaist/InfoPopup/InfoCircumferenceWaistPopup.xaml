                                        </Frame>

                                    </Grid>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>

                        <ListView.Footer>
                            <Label Text="Fonte: Adaptado de Bray &amp; Gray(1998)"
                                   TextColor="{StaticResource DarkGreyText}"
                                   FontAttributes="Bold"
                                   FontSize="12" Margin="0" BackgroundColor="{StaticResource PageColor}" />
