<?xml version="1.0"
      encoding="utf-8"?>

<contentPageCustomer:BaseContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:frame="clr-namespace:NutriApp.Components.Titles.Frame"
    xmlns:components="clr-namespace:NutriApp.Components"
    xmlns:contentPageCustomer="clr-namespace:NutriApp.Components.ContentPageCustomer"
    TextTitle="Sobre o Aplicativo"
    TypeTitle="None"
    BackgroundColor="{StaticResource PageColor}"
    x:Class="NutriApp.Views.About.AboutPage">

        <ScrollView>

            <StackLayout>

                <StackLayout Margin="10,20">

                    <Image WidthRequest="100"
                           HeightRequest="100"
                           Source="orange.png" />

                    <Label Text="Guia do Nutricionista"
                           FontSize="25"
                           FontAttributes="Bold"
                           HorizontalOptions="CenterAndExpand"
                           TextColor="{StaticResource DarkOrange}" />

                </StackLayout>

                <StackLayout Margin="20,20">

                    <Border 
                        Padding="10,20"
                        StrokeThickness="0" 
                        StrokeShape="RoundRectangle 30" 
                        BackgroundColor="{StaticResource LightBlue}">

                        <Label
                            Text="O Guia do Nutricionista é um aplicativo de apoio aos Estudantes e Profissionais da área da Nutrição com o objetivo de auxiliar com ferramentas e informações."
                            LineHeight="1.4"
                            FontSize="16"
                            HorizontalTextAlignment="Center"
                            TextColor="{StaticResource DarkBlue}" />

                    </Border>

                    <frame:TitleFrameView Margin="0,15,0,0"
                                          TextTitle="Desenvolvimento" />

                    <Label TextColor="{StaticResource DarkGreyText}"
                           VerticalOptions="Center"
                           HorizontalTextAlignment="Center"
                           Text="Anna Júlia M. Araki Rabelo - Nutricionista" />

                    <Label Margin="0"
                           TextColor="{StaticResource DarkGreyText}"
                           HorizontalTextAlignment="Center"
                           Text="Anna Júlia Rodrigues de Andrade - Design" />

                    <Label Margin="0"
                           TextColor="{StaticResource DarkGreyText}"
                           HorizontalTextAlignment="Center"
                           Text="Ricardo Masuda - Programador" />

                    <Label Margin="0"
                           TextColor="{StaticResource DarkGreyText}"
                           HorizontalTextAlignment="Center"
                           Text="Lyncoln Carmo - Programador" />

                    <frame:TitleFrameView Margin="0,15,0,0"
                                          TextTitle="Entre em contato" />

                    <Label FontAttributes="None"
                           HorizontalTextAlignment="Center"
                           LineBreakMode="CharacterWrap"
                           TextColor="{StaticResource DarkGreyText}">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Ricardo Masuda - Programador&#x0a;" />
                                <Span Text="Email: mricardo1611@gmail.com&#x0a;"
                                      FontSize="11" />
                                <components:HyperlinkSpan Text="linkedin: ricardo-masuda-a8a7b7187"
                                                          FontSize="11"
                                                          Url=" https://www.linkedin.com/in/ricardo-masuda-a8a7b7187/" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

                    <Label FontAttributes="None"
                           HorizontalTextAlignment="Center"
                           LineBreakMode="CharacterWrap"
                           TextColor="{StaticResource DarkGreyText}">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Anna Júlia M. Araki Rabelo - Nutricionista&#x0a;" />
                                <components:HyperlinkSpan Text="Instagram: annajuliaaraki/"
                                                          FontSize="11"
                                                          Url=" https://www.instagram.com/annajuliaaraki/" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

                    <frame:TitleFrameView Margin="0,15,0,0"
                                          TextTitle="Agradecimento" />
                    
                    <Label Margin="0"
                           TextColor="{StaticResource DarkGreyText}"
                           HorizontalTextAlignment="Center"
                           Text="Ayume Masuda" />

                    <Label Margin="0"
                           TextColor="{StaticResource DarkGreyText}"
                           HorizontalTextAlignment="Center"
                           Text="Marcus Paulo Garcia" />

                    <Label Margin="0"
                           TextColor="{StaticResource DarkGreyText}"
                           HorizontalTextAlignment="Center"
                           Text="Clara Araki" />

                </StackLayout>

            </StackLayout>

        </ScrollView>

</contentPageCustomer:BaseContentPage>