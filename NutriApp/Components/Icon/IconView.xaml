<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:NutriApp.Components.Icon"
             x:Class="NutriApp.Components.Icon.IconView">
    <Label 
        x:Name="Icon"
        VerticalOptions="CenterAndExpand"
        HorizontalOptions="CenterAndExpand"
        FontSize="{Binding FontSize, Source={RelativeSource AncestorType={x:Type components:IconView}}}"
        TextColor="{Binding TextColor, Source={RelativeSource AncestorType={x:Type components:IconView}}}"
        FontFamily="FontAwesomeBold"/>
    
</ContentView>