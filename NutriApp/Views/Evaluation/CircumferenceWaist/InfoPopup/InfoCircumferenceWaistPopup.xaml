                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <Frame
                                            Grid.Column="0"
                                            Margin="0"
                                            BorderColor="{StaticResource DarkGreyText}"
                                            BackgroundColor="{StaticResource PageColor}"
                                            CornerRadius="0"
                                            HorizontalOptions="Fill"
                                            Padding="4">

                                            <Label Grid.Column="0"
